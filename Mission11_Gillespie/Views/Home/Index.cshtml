@{
    ViewData["Title"] = "Home Page";
}
@model BookListViewModel

    <div class="text-center">
        <h1 class="display-4">Welcome to Rimmie-Orange Books</h1>
        <p>Learn about what's in stock by browsing our booklist below.</p>
    </div>

        @foreach (Book b in Model.Books)
        {
            <partial name="BookListSummary" model = "b"/>
        }

<div page-model="@Model.PaginationInformation" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>